<%= form_with(model: post, local: true) do |form| %>

<%= render partial: "layouts/form_validation", locals: {item: post} %>

  

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :summary %>
    <%= form.text_field :summary %>
  </div>

  <div class="field">
    <%= form.label :catefory_id %>
    <%= form.select :catefory_id, Catefory.all.collect { |c| [c.title, c.id] } %>
  </div>

  <div class="field">
    <%= form.label :active %>
    <%= form.check_box :active %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
