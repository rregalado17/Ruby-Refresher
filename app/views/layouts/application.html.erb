  </head>

  <body>
    <div class="container">
      <div class="row" >
        <div class="col">
    <%= yield %>
    </div>
    </div>
    </div>
    <%= @name if @name.present? %>

    <%= render partial: "layouts/footer" %>
  </body>
</html>
